# ==============================================
# Heurekka Backend - Environment Configuration
# ==============================================
# Copy this file to .env and update the values for your local development

# Application Configuration
NODE_ENV=development
PORT=3001
HOST=0.0.0.0
LOG_LEVEL=debug

# CORS Configuration
CORS_ORIGIN=http://localhost:3000

# Security
JWT_SECRET=dev-jwt-secret-please-change-in-production
SESSION_SECRET=dev-session-secret-please-change

# Database Configuration (PostgreSQL with PostGIS)
DATABASE_URL=postgresql://heurekka:heurekka123@localhost:5432/heurekka_dev
DB_HOST=localhost
DB_PORT=5432
DB_NAME=heurekka_dev
DB_USER=heurekka
DB_PASSWORD=heurekka123
DB_SSL=false

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Elasticsearch Configuration
ELASTICSEARCH_URL=http://localhost:9200
ELASTICSEARCH_INDEX_PREFIX=heurekka_dev
ELASTICSEARCH_USERNAME=
ELASTICSEARCH_PASSWORD=

# Supabase Configuration
SUPABASE_URL=https://your-project-id.supabase.co
SUPABASE_ANON_KEY=your-anon-key-here
SUPABASE_SERVICE_KEY=your-service-role-key-here

# WhatsApp Business API (Meta)
WHATSAPP_PHONE_NUMBER_ID=your-phone-number-id
WHATSAPP_ACCESS_TOKEN=your-access-token
WHATSAPP_WEBHOOK_VERIFY_TOKEN=your-webhook-verify-token
WHATSAPP_GRAPH_API_VERSION=v18.0

# File Upload Configuration
UPLOAD_MAX_SIZE=10485760
UPLOAD_ALLOWED_TYPES=image/jpeg,image/png,image/gif,application/pdf
UPLOAD_DESTINATION=uploads

# Rate Limiting
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX=100

# WebSocket Configuration
WS_PORT=3001
WS_CORS_ORIGIN=http://localhost:3000

# Email Configuration (Optional - for notifications)
SMTP_HOST=
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=
SMTP_PASS=
EMAIL_FROM=noreply@heurekka.com

# External API Keys
GOOGLE_MAPS_API_KEY=your-google-maps-api-key
STRIPE_SECRET_KEY=sk_test_your-stripe-test-key
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret

# Monitoring & Analytics (Optional)
SENTRY_DSN=
MIXPANEL_TOKEN=

# Development Tools
ENABLE_PLAYGROUND=true
ENABLE_INTROSPECTION=true
ENABLE_DEBUG_ROUTES=true

# Health Check Configuration
HEALTH_CHECK_TIMEOUT=5000
HEALTH_CHECK_INTERVAL=30000