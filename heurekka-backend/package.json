{
  "name": "heurekka-backend",
  "version": "1.0.0",
  "description": "Heurekka Backend API with tRPC, WebSocket server, and external integrations",
  "main": "dist/server.js",
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "build": "tsc",
    "start": "node dist/server.js",
    "test": "vitest",
    "test:coverage": "vitest --coverage",
    "lint": "eslint src --ext .ts,.tsx",
    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    "type-check": "tsc --noEmit",
    "healthcheck": "node dist/healthcheck.js",
    "docker:up": "docker-compose up --build",
    "docker:down": "docker-compose down",
    "docker:clean": "docker-compose down -v --remove-orphans",
    "docker:logs": "docker-compose logs -f backend",
    "docker:restart": "docker-compose restart backend",
    "docker:tools": "docker-compose --profile tools up -d",
    "db:setup": "docker-compose up -d postgres && echo 'Waiting for database...' && sleep 10",
    "db:reset": "docker-compose down -v postgres && docker-compose up -d postgres",
    "services:up": "docker-compose up -d postgres redis elasticsearch",
    "services:down": "docker-compose stop postgres redis elasticsearch",
    "setup": "bash scripts/dev-setup.sh",
    "local:setup": "cp .env.example .env && npm run services:up && echo 'Local environment ready! Update .env with your values.'",
    "local:dev": "npm run services:up && npm run dev",
    "local:clean": "docker-compose down -v && docker system prune -f"
  },
  "keywords": [
    "trpc",
    "websocket",
    "rental-marketplace",
    "real-time",
    "whatsapp-api"
  ],
  "author": "Heurekka Team",
  "license": "UNLICENSED",
  "dependencies": {
    "@trpc/server": "^10.45.2",
    "@supabase/supabase-js": "^2.57.0",
    "superjson": "^2.2.2",
    "zod": "^3.22.4",
    "ws": "^8.16.0",
    "redis": "^4.6.13",
    "express": "^4.19.2",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "morgan": "^1.10.0",
    "compression": "^1.7.4",
    "dotenv": "^16.4.5",
    "@elastic/elasticsearch": "^8.12.2",
    "ioredis": "^5.3.2",
    "socket.io": "^4.7.4",
    "@socket.io/redis-adapter": "^8.2.1"
  },
  "devDependencies": {
    "@types/node": "^20.11.19",
    "@types/express": "^4.17.21",
    "@types/ws": "^8.5.10",
    "@types/cors": "^2.8.17",
    "@types/morgan": "^1.9.9",
    "@types/compression": "^1.7.5",
    "typescript": "^5.3.3",
    "tsx": "^4.7.1",
    "vitest": "^1.3.1",
    "@typescript-eslint/eslint-plugin": "^7.1.0",
    "@typescript-eslint/parser": "^7.1.0",
    "eslint": "^8.57.0"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=9.0.0"
  }
}